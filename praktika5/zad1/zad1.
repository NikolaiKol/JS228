<html>
<head>
 <style>
  img {
   display: block;
   margin: 0 auto;
   width: 300px;
   height: 300px;
   border: none;
  }
  .border {
   border: 3px solid red;
  }
 </style>
</head>
<body>
 <img src="cat.jpg" onmouseover="addBorder()" onmouseout="removeBorder()"> 
 <script>
  function addBorder() {
   document.getElementsByTagName("img")[0].classList.add("border");
  }

  function removeBorder() {
   document.getElementsByTagName("img")[0].classList.remove("border");
  }
 </script>
</body>
</html>
