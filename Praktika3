<html>
  <body>
    <button onclick="findZnak()">Найти "!"</button>
    <script>
      var arr = ["Один,два!Три,четыре!"]; // задаем символьный массив

      function findZnak() {
        var index = -1; // инициализируем индекс последнего символа "!" значением -1
        for (var i = 0; i < arr.length; i++) { // перебираем все элементы массива
          var str = arr[i]; // получаем символьную строку из текущего элемента массива
          var tempIndex = str.lastIndexOf("!"); // находим индекс последнего символа "!"
          if (tempIndex > index) { // если индекс больше предыдущего найденного индекса
            index = tempIndex; // сохраняем новый индекс
          }
        }

        if (index === -1) {
          alert("В массиве нет символа !");
        } else {
          alert("Последний символ ! находится в позиции " + index);
        }
      }
    </script>
  </body>
</html>
