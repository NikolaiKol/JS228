<html>
  <body>
    <button onclick="findZnak()">Найти "!"</button>
    <script>
      var arr = ["Один,два!Три,четыре!"];

      function findZnak() {
        var index = -1; 
        for (var i = 0; i < arr.length; i++) { 
          var str = arr[i]; 
          var tempIndex = str.lastIndexOf("!");
          if (tempIndex > index) {
            index = tempIndex; 
          }
        }

        if (index === -1) {
          alert("В массиве нет символа !");
        } else {
          alert("Последний символ ! находится в позиции " + index);
        }
      }
    </script>
  </body>
</html>
